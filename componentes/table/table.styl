.Contenedor
	border 1px solid borderTable
	background-color #f9fafc
	margin-top 1em
	margin-left 1em
	margin-right 1em
// tabla
.Tabla
	margin-top 1em
	position relative
	&-Descripcion
		height 0.5em
		padding-top 0.5em
		padding-left 1em
		padding-bottom 1em
		font-size 1.4em
		background-color #E4F0F4
		border-bottom 1px solid borderTable
		position relative
		& span:first-child
			font-family: 'Open Sans', sans-serif;
			color #1A2452
			font-weight bold
			font-size 0.7em
		& span:last-child
			font-family: 'Open Sans', sans-serif;
			font-weight lighter
			color #3A3E5D
			font-size 0.7em
		& div
			position absolute
			background-color #48B048
			color white
			left 14em
			top 1.1em
			padding-left 0.5em
			padding-right 0.5em
			font-size 0.6em
			border-radius 0.3em
			padding-top 0.2em
			padding-bottom 0.2em
			transition all 0.5s ease
			& i
				display inline-block
				margin-left 0.5em
			&:hover
				background-color #378621
				cursor pointer
	&-EditDesplegable
		height 19.7em
		cursor -webkit-grab
		display none
		background-color red
		position absolute
		width 30em
		top -12.5em
		right 0.89em
		background-color #fcf8e3
		border 1px solid #D6D6D7
		&-Title
			background-color #F5BC4D
			color #7D5C1D
			padding-top 0.5em
			padding-bottom 0.5em
			padding-left 1em
			& span:first-child
				font-weight bold
				color #AA5C04
		&-Body
			padding-left 5%
			padding-top 1em	
			&-Form
				overflow-y scroll
				height 13em
			&-Botones span
				padding-left 1em
				padding-right 1em
				margin-top 1em
				padding-top 0.2em
				padding-bottom 0.2em
				border-radius 0.2em
				color white
				background-color red
				float right
				margin-right 5%
				cursor pointer
				&:last-child
					background-color #EE8A7F
					border 1px solid #CC4D4D
					&:hover
						background-color #e74c3c			
				&:first-child
					background-color #AED281
					border 1px solid #578022
					&:hover
						background-color #7db831
			i
				background-color #D9D8C9
				color #DA5E20						
				padding-left 1em
				padding-top 0.4em
				padding-bottom 0.5em
				padding-right 1em
				margin-bottom 0.5em
				margin-right -0.25em
				height 1.12em
				border 1px solid #CEC7C7
			input
				height 2em
				width 84%
				padding-left 1em
				//margin-top -5em				
	&-BotonosPaginacion
		display flex
		& span:first-child,span:last-child
			width 2em
			height 2em
			background-color #CBE4E6
			display flex
			justify-content center
			align-items center
			color #1A2452
	&-CokachoBuscador
		position absolute
		right 1em
		width 15em
.Tr-Editable
	background-color #fcf8e3 !important
.Input-Editando
	background-color #fcf8e3
.Tabla-Cokacho1
	height 20em !important
	display block
	overflow-y scroll

	& thead
		border-bottom 5px solid gray
		width 100%
		background-color #f9f9f9
		& th
			width 5%
			color #394263
			font-size 1em
			height 2.3em
			border-bottom 1px solid #eaedf1
	& tbody
		height inherit
		& tr:nth-child(even)
			background: #F0FEFF
		& tr:nth-child(odd)
			background: #fff
		& td
			width 5%			
			color #676363		
			height 2.3em
			text-align center
			padding-top 0.5em
			border-bottom 1px solid borderTable
			& .ImgCircular
				border-radius 50%
				height 4em
		& td:last-child div
			display inline-block
			margin-left -5px
		& .Tabla-BotonEditar
			border 1px solid #D9DDE3
			background-color #F3EFEF
			width 1.3em
			border-radius 0.2em
			color #394263
			transition all 0.2s ease
			&:hover
				cursor pointer
				border 1px solid white
				background-color #FFFDFD
		& .Tabla-BotonEliminar
			background-color #ef8a80
			color white
			width 1.3em
			border 1px solid #e74c3c
			border-top-right-radius 0.2em
			border-bottom-right-radius 0.2em
			&:hover
				cursor pointer
				background-color #EE5848